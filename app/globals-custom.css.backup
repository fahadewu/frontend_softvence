/* Mobile Responsive Styles */

/* Viewport meta tag is handled in layout.tsx */
html {
    overflow-x: hidden;
}

body {
    overflow-x: hidden;
    width: 100%;
}

/* Container adjustments for mobile */
.container {
    padding-left: 15px;
    padding-right: 15px;
}

/* Mobile Typography */
@media (max-width: 767px) {
    /* Hero section text */
    .hero--area h1,
    .hero--area h2 {
        font-size: 40px !important;
    }

    /* Common headings */
    .common--heading {
        font-size: 28px !important;
        line-height: 1.3 !important;
    }

    .common--sub--heading {
        font-size: 14px !important;
    }

    .common--para {
        font-size: 14px !important;
        line-height: 1.6 !important;
    }

    /* Inner hero sections */
    .inner--hero--text h1,
    .inner--hero--text h2,
    .inner--hero--text h3 {
        font-size: 36px !important;
    }

    /* Work page specific */
    .work--inner--hero .inner--hero--text h1,
    .work--inner--hero .inner--hero--text h2,
    .work--inner--hero .inner--hero--text h3 {
        font-size: 36px !important;
    }

    /* Section titles */
    .section--title h3 {
        font-size: 28px !important;
    }

    /* Testimonials */
    .testimonial--right--title h3 {
        font-size: 24px !important;
    }

    .testi--box .client--content p {
        font-size: 14px !important;
    }

    /* Footer */
    .footer--area h3 {
        font-size: 24px !important;
    }

    /* Blog titles */
    .blog--box h4 {
        font-size: 16px !important;
    }
}

/* Tablet adjustments */
@media (min-width: 768px) and (max-width: 991px) {
    .common--heading {
        font-size: 36px !important;
    }

    .inner--hero--text h1,
    .inner--hero--text h2,
    .inner--hero--text h3 {
        font-size: 60px !important;
    }

    .work--inner--hero .inner--hero--text h1,
    .work--inner--hero .inner--hero--text h2,
    .work--inner--hero .inner--hero--text h3 {
        font-size: 60px !important;
    }
}

/* Desktop */
@media (min-width: 992px) {
    .work--inner--hero .inner--hero--text h1,
    .work--inner--hero .inner--hero--text h2,
    .work--inner--hero .inner--hero--text h3 {
        font-size: 80px !important;
    }
}

@media (min-width: 1200px) {
    .work--inner--hero .inner--hero--text h1,
    .work--inner--hero .inner--hero--text h2,
    .work--inner--hero .inner--hero--text h3 {
        font-size: 100px !important;
    }
}

/* Hero Section Mobile */
@media (max-width: 767px) {
    .hero--contents--wrapper {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .hero--box {
        width: 100% !important;
        padding: 30px 20px !important;
        min-height: auto !important;
    }

    .branding--area h1,
    .design--area h2,
    .development--area h2 {
        font-size: 36px !important;
        margin-bottom: 15px !important;
    }

    .hero--play--area {
        flex-direction: column;
        align-items: flex-start !important;
        gap: 15px;
    }

    .play--img--area img {
        width: 80px !important;
        height: 80px !important;
    }

    .rotate--circle--wrapper {
        width: 120px !important;
        height: 120px !important;
    }

    .circle--hero {
        margin-top: 20px !important;
    }
}

/* Navigation Mobile */
@media (max-width: 991px) {
    .header--area {
        padding: 15px 0 !important;
    }

    .logo--area img {
        max-width: 120px !important;
    }

    .menu--area {
        display: none;
    }

    .hamburger {
        display: block !important;
    }

    /* Mobile menu when active */
    .parent--wrapper.menu--opened .menu--area {
        display: flex;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: #000;
        z-index: 9999;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .parent--wrapper.menu--opened .menu--area ul {
        flex-direction: column;
        gap: 30px;
    }

    .parent--wrapper.menu--opened .menu--area ul li a {
        font-size: 24px;
    }
}

/* Case Studies Mobile */
@media (max-width: 767px) {
    .case--studies--wrapper .filters ul {
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
    }

    .case--studies--wrapper .filters ul li {
        font-size: 12px !important;
        padding: 8px 15px !important;
    }

    .case--studies--wrapper .filters ul li svg {
        width: 14px !important;
        height: 14px !important;
    }

    .case--item .content h3 {
        font-size: 18px !important;
    }

    .case--item .content p {
        font-size: 12px !important;
    }
}

/* How We Work Section Mobile */
@media (max-width: 767px) {
    .work--step {
        margin-bottom: 40px !important;
    }

    .work--step .row {
        flex-direction: column !important;
    }

    .work--step.step--two .row,
    .work--step.step--four .row,
    .work--step.step--six .row {
        flex-direction: column !important;
    }

    .lottie--container {
        width: 100% !important;
        max-width: 300px !important;
        margin: 0 auto 20px !important;
    }

    .design--contents {
        padding: 20px 0 !important;
    }

    .step--number {
        font-size: 60px !important;
    }

    .design--contents h3 {
        font-size: 24px !important;
    }

    .step--info li p {
        font-size: 14px !important;
    }
}

/* Contact Popup Mobile */
@media (max-width: 767px) {
    .contact--modal .modal--content {
        width: 95% !important;
        max-width: 95% !important;
        padding: 30px 20px !important;
    }

    .contact--modal h3 {
        font-size: 24px !important;
    }

    .contact--modal input,
    .contact--modal textarea {
        font-size: 14px !important;
    }

    .close--modal {
        width: 40px !important;
        height: 40px !important;
        top: 10px !important;
        right: 10px !important;
    }
}

/* Footer Mobile */
@media (max-width: 767px) {
    .footer--area {
        padding: 40px 0 20px !important;
    }

    .footer--logo img {
        max-width: 150px !important;
    }

    .footer--area .row > div {
        margin-bottom: 30px;
    }

    .footer--links ul {
        flex-direction: column;
        gap: 10px !important;
    }

    .footer--social ul {
        gap: 15px !important;
    }

    .footer--social ul li a {
        width: 40px !important;
        height: 40px !important;
        font-size: 18px !important;
    }
}

/* Buttons Mobile */
@media (max-width: 767px) {
    .button,
    .buttonv2 {
        padding: 12px 24px !important;
        font-size: 14px !important;
    }

    .button-click {
        min-width: auto !important;
    }
}

/* Owl Carousel Mobile */
@media (max-width: 767px) {
    .owl-carousel .owl-item img {
        width: auto !important;
        max-width: 100% !important;
    }

    .owl-dots {
        margin-top: 20px !important;
    }
}

/* FAQ Section Mobile */
@media (max-width: 767px) {
    .accordion-button {
        font-size: 14px !important;
        padding: 15px !important;
    }

    .accordion-body {
        font-size: 14px !important;
        padding: 15px !important;
    }
}

/* Blog Section Mobile */
@media (max-width: 767px) {
    .blog--box {
        margin-bottom: 20px;
    }

    .blog--box .img--area {
        height: auto !important;
    }

    .blog--content {
        padding: 15px !important;
    }

    .blog--content .category {
        font-size: 12px !important;
    }
}

/* Spacing Utilities Mobile */
@media (max-width: 767px) {
    .mt_20 { margin-top: 10px !important; }
    .mt_50 { margin-top: 25px !important; }
    .mt_80 { margin-top: 40px !important; }
    .mt_85 { margin-top: 40px !important; }
    .mt_100 { margin-top: 50px !important; }

    .section {
        padding: 40px 0 !important;
    }
}

/* Prevent horizontal scroll */
@media (max-width: 767px) {
    .row {
        margin-left: -10px;
        margin-right: -10px;
    }

    .row > * {
        padding-left: 10px;
        padding-right: 10px;
    }

    img {
        max-width: 100%;
        height: auto;
    }
}

/* Contact Marquee Mobile */
@media (max-width: 767px) {
    .contact--marquee--area {
        padding: 30px 0 !important;
    }

    .marquee__img svg {
        width: 80px !important;
        height: auto !important;
    }
}

/* Case Study Detail Pages Mobile */
@media (max-width: 767px) {
    .case--study--detail--area img {
        width: 100% !important;
        height: auto !important;
    }

    .case--navigation {
        flex-direction: column;
        gap: 20px;
    }

    .case--navigation a {
        width: 100% !important;
        text-align: center;
    }
}

/* Isotope Grid Mobile */
@media (max-width: 767px) {
    .grid .col-md-6 {
        width: 100% !important;
        flex: 0 0 100% !important;
        max-width: 100% !important;
    }
}

/* Preloader Mobile */
@media (max-width: 767px) {
    .preloader--logo img {
        max-width: 150px !important;
    }
}

/* Smooth scrolling for all devices */
html {
    scroll-behavior: smooth;
}

/* Touch device optimizations */
@media (hover: none) and (pointer: coarse) {
    .button:active,
    .buttonv2:active {
        transform: scale(0.95);
    }

    a:active {
        opacity: 0.7;
    }
}

/* Landscape mobile fixes */
@media (max-width: 767px) and (orientation: landscape) {
    .hero--area {
        min-height: auto !important;
    }

    .inner--hero--area {
        min-height: 50vh !important;
    }
}
